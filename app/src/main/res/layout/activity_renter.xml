<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.alizawren.myparker.RenterActivity">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:orientation="vertical">

      <Button
        android:id="@+id/button_back"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"
        android:text="back"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

      <TextView
          android:id="@+id/my_rents"
          android:text="Put your parking spot up for rent"
          android:textColor="@android:color/black"
          android:textSize="20sp"
          android:textAlignment="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      <AutoCompleteTextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"
        android:hint="Location"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

      <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"
        android:hint="Description"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

      <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

      <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
          android:id="@+id/btn_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Set Start Time"/>
        <TextView
          android:id="@+id/in_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
        <TextView
          android:id="@+id/in_time"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
          android:id="@+id/btn_end_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Set End Time"/>
        <TextView
          android:id="@+id/in_end_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
        <TextView
          android:id="@+id/in_end_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"/>
      </LinearLayout>

      <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Submit"/>


      <ListView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="50dp"
        android:background="#DDDDDD"
        android:divider="#FFCC00"
        android:dividerHeight="2dp"
        android:textSize="40sp"/>
    </LinearLayout>
  </ScrollView>

</android.support.constraint.ConstraintLayout>
