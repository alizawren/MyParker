<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.alizawren.myparker.RenteeActivity">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:orientation="vertical">

      <Button
        android:id="@+id/button_back"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:background="@android:color/background_light"
        android:text="back"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

      <TextView
          android:id="@+id/global_list"
          android:text="Parking Spots in the Area"
          android:textColor="@android:color/black"
          android:textSize="20sp"
          android:layout_marginTop="20dp"
          android:textAlignment="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      <ListView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
          android:padding="10dp"
        android:background="#DDDDDD"
        android:divider="#111111"
        android:dividerHeight="2dp"
        android:textSize="40sp"/>

      <TextView
          android:id="@+id/my_rents"
          android:text="My Rented Parking Spots"
          android:textColor="@android:color/black"
          android:textSize="20sp"
          android:textAlignment="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      <ListView
        android:id="@+id/myDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
          android:padding="10dp"
        android:background="#DDDDDD"
        android:divider="#FFCC00"
        android:dividerHeight="2dp"
        android:textSize="40sp"/>

    </LinearLayout>
  </ScrollView>

</android.support.constraint.ConstraintLayout>
